<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Text Input -->
    <EditText
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Nhập text"
        android:gravity="top"
        android:background="@drawable/bg_rounded"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Paste Button -->
    <ImageButton
        android:id="@+id/pasteBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_paste"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/inputText"
        app:layout_constraintStart_toStartOf="@id/inputText"
        android:layout_marginTop="8dp" />

    <!-- Language Dropdown -->
    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputText"
        app:layout_constraintStart_toEndOf="@id/pasteBtn"
        app:layout_constraintEnd_toEndOf="@id/inputText"
        android:layout_marginStart="8dp" />

    <!-- Translate Button -->
    <Button
        android:id="@+id/translateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dịch"
        android:background="@drawable/bg_rounded"
        app:layout_constraintTop_toBottomOf="@id/languageSpinner"
        app:layout_constraintStart_toStartOf="@id/inputText"
        app:layout_constraintEnd_toEndOf="@id/inputText"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
